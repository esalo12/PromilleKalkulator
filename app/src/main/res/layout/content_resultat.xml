        android:paddingTop="35dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="35dp"
        android:text="Antall timer til du kan kjÃ¸re:"
